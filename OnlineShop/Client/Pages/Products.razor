@page "/Products"

@if (ProductDtos == null)
{
	<h3>Loading Products...</h3>
}
else
{
	<h3 class="mb-5">Products</h3>
	var productCount = ProductDtos.Count();
	@if (productCount > 0)
	{
		@foreach (var prod in GetGroupedProductsByCategory())
		{
			<h4>@GetCategoryName(prod)</h4>
                    
            <div class = "row mt-3">
                <DisplayProducts Products = "@prod.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3"/>
		}

	}
}
