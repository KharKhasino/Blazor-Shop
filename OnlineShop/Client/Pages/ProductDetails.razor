@page "/ProductDetails/{id:int}"

@if (Product == null)
{
	<h3>Loading Details...</h3>
}
else
{
	<h3 class="mb-5">Product Details</h3>
	<div class="row">
		<div class=" col-6 mb-4" height="300" width="300">
			<img src="@Product.Img" class="card-img-top img-thumbnail">
		</div>
		<div class="col-md-6">
			<h3>@Product.Name</h3>
			<p class="mb-4">@Product.Desc</p>
			<p class="mb-4"><b>@Product.Price.ToString("C") &&nbsp; (@Product.Qty items in stock)</b></p>
			@*<button class="btn btn-success" @onclick="()=>AddItem(new CartItemToAddDto{
		CartId = ManUser.CartId,
		ProductId = Product.Id,
		Qty=1
		})">
				<b>Add to cart</b>
			</button>*@
		</div>
	</div>
}
